{% extends 'base.twig' %}

{% block primary_content %}
<div class="bs-component">
	<h1>{{ team_name }}</h1>
</div>
<div class="bs-component">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
        	<thead class="thead-inverse">
            	<tr class="success">
                	<th>Name</th>
                	<th>Team</th>
                	<th>Position</th>
                	<th>Games Played</th>
                	<th>Goals</th>
                	<th>Assists</th>
                	<th>+/-</th>
                	<th>Penalty Mins</th>
                	<th>Shots on Goal</th>
                	<th>PP goals</th>
                	<th>GW goals</th>
                	<th>Fantasy Points</th>
            	</tr>
        	</thead>
        	<tbody>
            {% for player in player_stats %}
                <tr>
                	<td>{{ player.name }}</td>
                	<td>{{ player.team }}</td>
                	<td>{{ player.position }}</td>
                	<td>{{ player.games_played }}</td>
                	<td>{{ player.goals }}</td>
                	<td>{{ player.assists }}</td>
                	<td>{{ player.plus_minus }}</td>
                	<td>{{ player.penalty_mins }}</td>
                	<td>{{ player.shots_on_goal }}</td>
                	<td>{{ player.pp_goals }}</td>
                	<td>{{ player.gw_goals }}</td>
                	<td>{{ player.FantasyPoints }}</td>
            	</tr>
            {% endfor %}
                <tr>
               	 	<td></td>
                	<td></td>
                	<td></td>
                	<td></td>
                	<td></td>
                	<td></td>
                	<td></td>
                	<td></td>
                	<td></td>
                	<td></td>
                	<td class="success">Total FP:</td>
                  	<td class="success">
            			{{ total_points }}
                	</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
