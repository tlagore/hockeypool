{% extends 'base.twig' %}


{% block primary_content %}
<div class="row">
    <div class="well bs-component">
    	<form class="form-horizontal" action="register.php" method="post">
    		<fieldset>
           		<legend><h2>Sign up for HockeyPool</h1></legend>
                 	
                <div class="form-group">
                	<div class="input-group">
                		<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                 		<input type="text" name="name" required class="form-control" placeholder="Enter Name" maxlength="50"  />
                	</div>
           		 	<span class="text-danger"></span>
                </div>
                
               	<div class="form-group">
                	<div class="input-group">
                    	<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                 		<input type="email" required name="email" class="form-control" placeholder="Enter Your Email" maxlength="40" />
                	</div>
                    <span class="text-danger"></span>
                </div>
                
                <div class="form-group">
                 	<div class="input-group">
                    	<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                 		<input type="password" name="pass" required class="form-control" placeholder="Enter Password" maxlength="15" />
                    </div>
                    <span class="text-danger"></span>
                </div>
                
                {%  if error  %}
    			<div class="form-group">
                 	<div class="alert alert-danger">
        				<p><span class="glyphicon glyphicon-info-sign"></span>  {{ error }}</p>
                    </div>
                </div>
                {%  endif %}
                
                <div class="form-group">
                		<div class="col-lg-11">
                  			<button type="submit" class="btn btn-primary btn-lg">Submit</button>
                  			<button type="reset" class="btn btn-primary btn-lg">Cancel</button>
              			</div>
              			<div class='col-lg-1'>
              				<a href="login.php">Sign in</a>
              			</div>
              	</div>	
              
            </fieldset>
      	</form>
    </div>
</div>

{% endblock %}